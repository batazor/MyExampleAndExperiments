rules:
  indent:
    - error
    - 2
  quotes:
    - 2
    - single
  linebreak-style:
    - 2
    - unix
  semi:
    - 2
    - never
  no-console: 0
  # Possible Errors
  comma-dangle: 1
  no-cond-assign: 1
  no-constant-condition: 1
  no-control-regex: 1
  no-debugger: 1
  no-dupe-args: 1
  no-dupe-keys: 1
  no-duplicate-case: 1
  no-empty: 1
  no-empty-character-class: 1
  no-ex-assign: 1
  no-extra-boolean-cast: 1
  no-extra-parens: 0
  no-extra-semi: 1
  no-func-assign: 1
  no-inner-declarations: 1
  no-invalid-regexp: 1
  no-irregular-whitespace: 1
  no-regex-spaces: 1
  no-unreachable: 1
  no-unsafe-finally: 1
  use-isnan: 1
  valid-jsdoc: 1
  valid-typeof: 1
  # Best Practices
  accessor-pairs: 1
  array-callback-return: 1
  default-case: 1
  dot-notation: 1
  eqeqeq: 1
  no-alert: 1
  no-caller: 1
  no-case-declarations: 1
  no-div-regex: 1
  no-else-return: 1
  no-empty-pattern: 1
  no-eq-null: 1
  no-eval: 2
  no-extra-bind: 1
  no-fallthrough: 2
  no-floating-decimal: 2
  no-implicit-globals: 2
  no-implied-eval: 1
  no-magic-numbers: 1
  no-multi-spaces: 1
  no-octal: 1
  no-redeclare: 1
  no-self-assign: 1
  # Variables
  no-unused-vars: 1
  # Node.js and CommonJS
  handle-callback-err: 2
  # Stylistic Issues
  # ...
  # ECMAScript 6
  constructor-super: 1
  no-class-assign: 1
  no-const-assign: 2
  no-new-symbol: 2
  # React
  no-danger: 0
  react/jsx-uses-vars: 2
  react/no-deprecated: [1, {'react': '0.15.0'}]
  react/no-direct-mutation-state: 2
  react/self-closing-comp: 1
  react/sort-prop-types: 1
  react/wrap-multilines: 2
env:
  es6: true
  node: true
  browser: true
extends:
  - eslint:recommended
globals:
  __PORT__: true
  __DEV__: true
ecmaFeatures:
  jsx: true
  experimentalObjectRestSpread: true
  modules: true
parser: 'babel-eslint'
parserOptions:
  sourceType: 'module'
plugins:
  - react

extends ./layout.jade

block content
  if (message.length > 0)
    | #{message}
    
    
  //- LOGIN FORM
  form(action="/login" method="post")
    input(type="text" name="email")
    input(type="password" name="password")
      
    button(type="submit") Login
    
  p Need an account?
    a(href="/signup") Signup
  p Or go
    a(href="/") home
    | .

apiVersion: v1
kind: Config
clusters:
- name: local
  cluster:
    certificate-authority: /etc/kubernetes/sslca.pem
users:
- name: kubelet
  user:
    client-certificate: /etc/kubernetes/sslworker.pem
    client-key: /etc/kubernetes/sslworker-key.pem
contexts:
- context:
    cluster: local
    user: kubelet
  name: kubelet-context
current-context: kubelet-context

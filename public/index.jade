doctype html

html(lang='en')

  head
    meta(charset='UTF-8')
    title Users
    
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    
    link(rel='stylesheet' href='./public/css/bootstrap.min.css')
    link(rel='stylesheet' href='./public/css/bootstrap-theme.min.css')
    
  body
    header.container
      h1 All Users
      
    hr.container.col-xs-12
    
    content#content.container.col-xs-12
      
    hr.container.col-xs-12
      
    .col-xs-12
      h2.col-xs-2 Form  
      button.col-xs-2.btn.btn-success(id='form_new_user' type='submit') New User
    form#form.container.form-horizontal(enctype='multipart/form-data' action='/user' method='POST')
      input.form-control(id='uid' type='hidden' name='uid')
      input.form-control(id='avatar' type='hidden' name='avatar')
      div.col-xs-4.form-group
        label.col-sm-2.control-label(for='name') Name
        div.col-sm-10
          input.form-control(id='name' type='text' name='name' placeholder='Petr Gros')
      div.col-xs-4.form-group
        label.col-sm-2.control-label(for='address') Address
        div.col-sm-10
          input.form-control(id='address' type='text' name='address' placeholder='Orel, Russia')
      div.col-xs-4.form-group
        label.col-sm-2.control-label(for='phone') Phone
        div.col-sm-10
          input.form-control(id='phone' type='text' name='phone' placeholder='89004562321, 86742390404')
      div.col-xs-4.form-group
        label.col-sm-2.control-label(for='email') Email
        div.col-sm-10
          input.form-control(id='email' type='email' name='email' placeholder='email@example.com')
      div.col-xs-6.form-group
        label.col-sm-2.control-label(for='avatar') Avatar
        div.col-sm-10
          input.form-control(id='avatar' type='file' name='avatar' multiple='multiple')
      button.col-xs-2.btn.btn-success(id='submi_new_user' type='submit') Go
    
    script(src='./public/js/jquery.min.js')
    script(src='./public/js/users.js')
  
